<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
    app:cardMaxElevation="0dp"
    app:cardCornerRadius="4dp"
    android:elevation="0dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:weightSum="4"
    android:padding="8dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:clickable="true"
    android:id="@+id/layout_country_wise_lin">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="25dp"
        android:id="@+id/layout_country_wise_country_rank"
        android:textSize="20sp"
        android:layout_weight="0.2"
        android:textColor="#000000"
        android:text="340."/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="4dp"
        android:layout_marginBottom="2dp"
        android:layout_height="35dp"
        android:layout_width="55dp"
        android:layout_marginTop="2dp">
    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/layout_country_wise_flag_imageview"
        android:scaleType="centerCrop"/>
</androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:gravity="start"
        android:id="@+id/layout_country_wise_country_name_textview"
        android:textSize="20sp"
        android:layout_weight="2.5"
        android:textColor="#000000"
        android:text="India"
        android:ellipsize="end"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:gravity="start"
        android:id="@+id/layout_country_wise_confirmed_textview"
        android:textSize="20sp"
        android:layout_weight="1.3" android:textColor="@color/yellow"
        android:text="97583"/>
</LinearLayout>
</androidx.cardview.widget.CardView>