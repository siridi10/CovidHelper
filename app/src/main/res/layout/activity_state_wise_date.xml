<?xml version="1.0" encoding="utf-8"?>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    tools:context=".StateWiseDataActivity"
    android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/activity_state_wise_swipe_refresh_layout" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_background">

        <EditText android:layout_height="50dp"
            android:layout_width="match_parent"
            android:id="@+id/activity_state_wise_search_editText"
            tools:ignore="RtlSymmetry"
            android:textColorHint="@color/gray"
            android:textColor="#000000"
            android:singleLine="true"
            android:paddingStart="10dp"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:hint="Search"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/search_icon"
            android:layout_margin="5dp"/>

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/activity_state_wise_title_card"
        app:cardCornerRadius="4dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:layout_gravity="center">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textColor="@color/orange"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="State"
        android:lines="1"
        android:gravity="start"
        android:layout_weight="2"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Total Cases"
        android:lines="1"
        android:gravity="start" android:layout_weight="1"
        android:ellipsize="end"/>

</LinearLayout>

</androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/activity_state_wise_recyclerview"
        android:layout_marginTop="5dp"/>

</LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>